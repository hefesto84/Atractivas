<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/ListadoItemLayout"
	android:paddingTop="7dp"
	android:paddingRight="@dimen/ListadoPadright"
	android:paddingBottom="7dp"
	android:paddingLeft="@dimen/ListadoPadleft"
	android:background="@drawable/article_list_item"
>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:src="@drawable/flecha_izq"
	/>
	<org.skilladev.ui.HorizontalListView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/horizontallistview"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="54dp"
		android:background="@android:color/transparent"
	/>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:src="@drawable/flecha_der"
	/>
</LinearLayout>
